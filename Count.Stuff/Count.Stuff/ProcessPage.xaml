<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Count.Stuff.ProcessPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Loading" IsVisible="{Binding Progress.IsNotCompleted}"/>
            <Label Text="{Binding Progress.Result.IsNormalSearchDone}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                   IsVisible="{Binding Progress.IsSuccessfullyCompleted}"/>
            <Label Text="{Binding Progress.Result.IsGardenSearchDone}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                   IsVisible="{Binding Progress.IsSuccessfullyCompleted}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>